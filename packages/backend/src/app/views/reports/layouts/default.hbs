<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap');
  @import url('https://cdn.iconmonstr.com/1.3.0/css/iconmonstr-iconic-font.min.css');
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Roboto', sans-serif;
    list-style: none;
  }
  html, body, #root {
    background: #f0f0f0;
  }
  #root {
    display: flex;
    justify-content: center;
  }
  .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #fff;
    border-radius: 4px;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
    margin: 24px;
    width: 100%;
    max-width: 750px;
  }
  .logo {
    height: 100px;
  }
  header, footer {
    display: flex;
    flex-direction: column;
    padding: 16px 24px;
    width: 100%;
  }
  header, footer div {
    color: #666;
    font-size: 14px;
  }
  header div strong {
    color: #666;
    font-size: 14px;
  }
  header strong {
    color: #333;
    font-size: 18px;
    line-height: 22px;
  }
  header, footer {
    background-color: #f0f0f0;
  }
  strong {
    font-weight: 500;
  }
  .content {
    cursor: pointer;
    display: flex;
    flex-direction: row;
    text-decoration: none;
    border: 1px solid #eee;
    border-radius: 4px;
    margin: 16px;
    padding: 16px;
    width: calc(100% - 48px);
    transition: all 0.2s;
  }
  .content:hover {
    background-color: #fafafa;
  }
  .content .data {
    flex: 1;
  }
  .content img {
    border-radius: 4px;
    height: 144px;
    object-fit: cover;
    width: 200px;
    margin-left: 16px;
  }
  .content .data .title {
    color: #333;
    font-size: 15px;
    font-weight: 500;
    margin-bottom: 16px;
  }
  .content .data .caption {
    color: #666;
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
  }
  .content .data .amount {
    color: #333;
    font-size: 18px;
    font-weight: 500;
    margin-top: 4px;
    text-transform: uppercase;
  }
  .content .data ul {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 4px -4px;
  }
  .content .data ul li {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #32b63f;
    border-radius: 4px;
    color: #fff;
    font-weight: 500;
    font-size: 13px;
    margin: 4px;
    height: 34px;
    width: 34px;
  }
  a.button {
    background-color: #32b63f;
    border-radius: 4px;
    color: #fff;
    font-size: 14px;
    font-weight: 500;
    padding: 12px 16px;
    text-decoration: none;
    transition: all 0.2s;
  }
  a.button:hover {
    background-color: #33a13f;
  }
  a.button.send {
    align-self: flex-end;
    margin: 0 24px 16px;
  }
  footer {
    align-items: center;
  }
  footer .socials {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 16px 0 8px;
  }
  footer .socials .social {
    text-decoration: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #999;
    transition: all 0.2s;
  }
  footer .socials .social:hover {
    color: #666;
  }
  footer .socials .social + .social {
    margin-left: 32px;
  }
  footer .socials .social span {
    margin-left: 16px;
    font-size: 16px;
    line-height: 16px;
  }
  .warn {
    padding: 16px;
  }
  .warn strong {
    color: #333;
    font-size: 14px;
    font-weight: 500;
  }
  .warn span {
    color: #333;
    font-size: 14px;
  }
</style>

<div id="root">
  <div class="wrapper">
    {{> header }}
    {{{ body }}}
    {{> footer }}
  </div>
</div>
